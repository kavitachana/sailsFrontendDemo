<%- partial ('partials/statusmessage.ejs') %>

<h2>Add Game</h2>
<form action="/create" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="gameName" class="col-sm-2 control-label">Game Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="gameName" name="gameName" placeholder="Game Name">
    </div>
  </div>
  <div class="form-group">
    <label for="countryOfOrigin" class="col-sm-2 control-label">Country of Origin</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="countryOfOrigin" name="countryOfOrigin"  placeholder="Country of Origin">
    </div>
  </div>
  <div class="form-group">
    <label for="yearDeveloped" class="col-sm-2 control-label">Year Developed</label>
    <div class="col-sm-10">
      <input type="yearDeveloped" class="form-control" id="yearDeveloped" name="yearDeveloped" placeholder="Year Developed">
    </div>
  </div>
  <div class="form-group">
    <label for="creator" class="col-sm-2 control-label">Creator</label>
    <div class="col-sm-10">
      <input type="creator" class="form-control" id="creator" name="creator" placeholder="Creator">
    </div>
  </div>
  <div class="form-group">
    <label for="brand" class="col-sm-2 control-label">Brand</label>
    <div class="col-sm-10">
      <input type="brand" class="form-control" id="brand" name="brand" placeholder="Brand">
    </div>
  </div>
  <div class="form-group">
    <label for="gameType" class="col-sm-2 control-label">Game Type</label>
    <div class="col-sm-10">
      <input type="gameType" class="form-control" id="gameType" name="gameType" placeholder="Game Type">
    </div>
  </div>
  <div class="form-group">
    <label for="minNumOfPlayers" class="col-sm-2 control-label">Minimum # of Players</label>
    <div class="col-sm-10">
      <input type="minNumOfPlayers" class="form-control" id="minNumOfPlayers" name="minNumOfPlayers" placeholder="Minimum # of Players (numbers only)">
    </div>
  </div>
  <div class="form-group">
    <label for="maxNumOfPlayers" class="col-sm-2 control-label">Maximum # of Players</label>
    <div class="col-sm-10">
      <input type="maxNumOfPlayers" class="form-control" id="maxNumOfPlayers" name="maxNumOfPlayers" placeholder="Maximum # of Players (numbers only)">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Game</button>
    </div>
  </div>
</form>